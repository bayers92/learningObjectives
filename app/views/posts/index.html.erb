<p id="notice"><%= notice %></p>

<div class = "small-12 medium-6 columns small-text-center medium-text-left">
<h1>Listing Posts</h1>
</div>

<div class = "small-12 medium-6 columns small-text-center medium-text-right">
  <%= link_to "Random Question", :get_random_question, :class => "button", :as => :get_random_question, data: { no_turbolink: true } %>
</div> 

<div class = "small-12 columns">
<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Body</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.question %></td>
        <td><%= post.body %></td>
        <!-- <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>


<br>

</div>
