<div class="contain-to-grid sticky">
<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><a href="/">UR Histo</a></h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <!-- <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li> -->
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">


      <!-- Answer Tab -->
      <% if @post != nil %>
        <% if @post.label != nil %>
          <li class="has-dropdown active active2">
            <span class = "active2"><a href="#">Answer</a></span>
            <ul class="dropdown">
              <li class = "active active2"><a href="#"><%= @post.label %></a></li>
            </ul>
          </li>
        <% end %>
      <% end %>


      <!-- Random Question Tab -->
      <li class = "active"><%= link_to "Random Question", :get_random_question, :class => "button", :as => :get_random_question, data: { no_turbolink: true }, :class => "li active" %></li>
     
      <% if user_signed_in? %>
        <li>
          <%= button_to "Logout", destroy_user_session_path, :class => "button alt5",  method: :delete %>
        </li>
      <% end %>

    </ul>

    <!-- Left Nav Section -->
    
    <ul class="left">
      <%= render 'application/alerts' %>

      <!-- Select Blocks Tab -->
       <li class="has-dropdown active">
        <a href="#">Select blocks</a>
        <%= render 'application/blocky' %>
      </li>
    </ul>
    
  </section>
</nav>
</div>